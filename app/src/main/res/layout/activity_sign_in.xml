<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_g"
    android:orientation="vertical"
    tools:context=".SignIn">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/sign_into_your_account"
            android:textColor="#E43F4658"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/email"
            android:textColor="#BC3F4658"
            android:textSize="18sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:background="#E1E1E1"
            android:textColor="#BC3F4658"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:inputType="textEmailAddress"
            android:drawableEnd="@drawable/ic" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/password"
            android:textColor="#BC3F4658"
            android:textSize="18sp" />

        <EditText

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:inputType="textPassword"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:textColor="#BC3F4658"
            android:background="#E1E1E1"
            android:drawableEnd="@drawable/ic_pass" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/forget_your_password"
            android:layout_marginTop="5dp"
            android:textColor="#3f4658"
            android:textSize="12sp" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_bg"
            android:fontFamily="@font/kanit_semiblod"
            android:textColor="#3A3A3A"
            android:textAllCaps="false"
            android:text="@string/log_in"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/or_log_in_using_social_media"
            android:textColor="#BC3F4658"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fb" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/ggl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:text="Don't have an Account"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/kanit_regular"
                android:text="@string/register_now"
                android:textColor="#ff7c17"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>